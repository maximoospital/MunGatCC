{
  "name": "mungatcc",
  "version": "1.0.0",
  "description": "Cliente custom de Mundo Gaturro.",
  "homepage": "https://www.github.com/maximoospital/mungatcc",
  "bugs": {
    "url": "https://www.github.com/maximoospital/mungatcc/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/maximoospital/mungatcc"
  },
  "author": "Maximo Ospital",
  "scripts": {
    "package": "electron-builder --publish never",
    "release": "electron-builder --publish always",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "start": "electron ."
  },
  "dependencies": {
    "electron-localshortcut": "^3.0.0",
    "electron-updater": "^6.1.8",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.maximoospital.MunGatCC",
    "productName": "Mundo Gaturro CC",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^24.13.3"
  }
}
